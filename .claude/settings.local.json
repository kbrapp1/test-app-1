{
  "permissions": {
    "allow": [
      "Bash(npx tsc:*)",
      "Bash(npx tsc:*)",
      "Bash(pnpm run:*)",
      "Bash(python:*)",
      "Bash(npx eslint:*)",
      "Bash(exit 0)",
      "Bash(npx tsc:*)",
      "Bash(grep:*)",
      "WebFetch(domain:github.com)",
      "Bash(rg:*)",
      "Bash(sed:*)",
      "Bash(find:*)",
      "Bash(echo $HOME)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(powershell:*)",
      "Bash(npm run typecheck:*)",
      "Bash(npm run lint)",
      "Bash(pnpm run:*)",
      "Bash(ls:*)",
      "Bash(git add:*)"
    ]
  },
  "model": "sonnet",
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "supabase",
    "context7"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File scripts/claude-hook-wrapper.ps1"
          }
        ]
      },
      {
        "matcher": "MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File scripts/claude-hook-wrapper.ps1"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File scripts/claude-hook-wrapper.ps1"
          }
        ]
      }
    ]
  }
}